<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hhh"
    android:gravity="center"
    tools:context=".FinalActivity">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="200dp">


        <TextView
            android:id="@+id/bookink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CEB394F1"
            android:text="B  o  o  k  i  n  g  !"
            android:textColor="@color/black"
            android:textSize="34sp" />


    </LinearLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name:"
        android:layout_marginLeft="50dp"
        android:inputType="textPersonName"
        android:textColor="#050505"
        android:layout_marginBottom="30dp"
        android:textColorHint="#020202" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:hint="Email:"
        android:textColor="#090808"
        android:textColorHint="#020202" />

    <EditText
        android:id="@+id/name3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:hint="Phone Number:"
        android:textColor="#050505"
        android:textColorHint="#020202" />

    <EditText
        android:id="@+id/name4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="30dp"
        android:hint="Booking Date &amp; Time:"
        android:layout_marginRight="50dp"
        android:textColor="#000000"
        android:textColorHint="#020202" />
    <EditText
        android:id="@+id/name5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:hint="Planet:"
        android:textColor="#000000"
        android:textColorHint="#020202" />

    <EditText
        android:id="@+id/name6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:layout_marginRight="50dp"
        android:hint="Number Of Tickets: "
        android:textColor="#000000"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/done"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:backgroundTint="#9A41C6A8"
        android:text="☑️"
        android:textSize="12sp"/>


</LinearLayout>